<Window x:Class="VisionGrabber.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:local="clr-namespace:VisionGrabber"
        mc:Ignorable="d"
        Title="History" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        Icon="icon.ico"
        Background="{StaticResource Brush_Background}"  
        Foreground="{StaticResource Brush_TextPrimary}"
        BorderBrush="{StaticResource Brush_Border}"
        BorderThickness="1">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="1" CornerRadius="0" CaptionHeight="32" UseAeroCaptionButtons="False" ResizeBorderThickness="4"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="{StaticResource Brush_Surface}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="History Library" VerticalAlignment="Center" Margin="15,0,0,0" Foreground="{StaticResource Brush_TextSecondary}" FontSize="12"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                <Button Style="{StaticResource TitleBarButtonStyle}" Click="Minimize_Click" ToolTip="Minimize">
                    <Button.Content>
                        M0,8 H10
                    </Button.Content>
                </Button>
                <Button Style="{StaticResource TitleBarButtonStyle}" Click="Maximize_Click" ToolTip="Maximize">
                    <Button.Content>
                        M0,1 H10 V9 H0 Z
                    </Button.Content>
                </Button>
                <Button Style="{StaticResource TitleBarCloseButtonStyle}" Click="Close_Click" ToolTip="Close">
                    <Button.Content>
                        M1,1 L9,9 M1,9 L9,1
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Sidebar List -->
            <Border BorderBrush="{StaticResource Brush_Border}" BorderThickness="0,0,1,0" Grid.Column="0" Background="{StaticResource Brush_Surface}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Recent Captures" FontWeight="SemiBold" Margin="15,20,15,10" FontSize="13" Foreground="{StaticResource Brush_TextSecondary}"/>

                    <ListBox x:Name="HistoryList" Grid.Row="1" 
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             SelectionChanged="HistoryList_SelectionChanged"
                             Padding="10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8,5">
                                    <StackPanel>
                                        <Grid Margin="0,0,0,4">
                                            <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:g}'}" Foreground="{StaticResource Brush_TextDisabled}" FontSize="11" HorizontalAlignment="Left"/>
                                            <TextBlock Text="{Binding ModelName}" Foreground="{StaticResource Brush_Accent}" FontSize="10" HorizontalAlignment="Right" FontWeight="Bold" Opacity="0.8"/>
                                        </Grid>
                                        <TextBlock Text="{Binding Content}" 
                                                   Foreground="{StaticResource Brush_TextPrimary}" 
                                                   TextTrimming="CharacterEllipsis" 
                                                   MaxHeight="38" 
                                                   TextWrapping="Wrap" 
                                                   FontSize="13"
                                                   Opacity="0.9"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.Resources>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Padding" Value="4"/>
                                <Setter Property="Margin" Value="0,0,0,4"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Name="Border" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true" Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="true">
                                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource Brush_SurfaceHighlight}"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="true">
                                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource Brush_SurfaceHighlight}"/>
                                                    <Setter TargetName="Border" Property="Opacity" Value="0.8"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.Resources>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Detail View -->
            <Grid Grid.Column="1" Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Metadata Header -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock x:Name="DetailDate" Text="Select an item" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource Brush_TextPrimary}"/>
                    <Border CornerRadius="4" Background="{StaticResource Brush_SurfaceHighlight}" Margin="15,2,0,2" Padding="8,2" VerticalAlignment="Center">
                         <TextBlock x:Name="DetailModel" Text="" Foreground="{StaticResource Brush_Accent}" FontSize="12" FontWeight="Bold"/>
                    </Border>
                </StackPanel>

                <!-- Actions Toolbar -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                    <Button x:Name="BtnSave" Content="Save Changes" Click="BtnSave_Click" Style="{StaticResource Style_ButtonPrimary}" Margin="0,0,10,0" IsEnabled="False" Width="120"/>
                    <Button x:Name="BtnCopy" Content="Copy Text" Click="BtnCopy_Click" Margin="0,0,10,0" IsEnabled="False" Width="100"/>
                    <Button x:Name="BtnDelete" Content="Delete" Click="BtnDelete_Click" IsEnabled="False" Style="{StaticResource Style_ButtonGhost}" Foreground="{StaticResource Brush_TextError}" Width="80"/>
                </StackPanel>

                <!-- Content -->
                <!-- Content Tabs -->
                <TabControl Grid.Row="2" Margin="0" Padding="0">

                    <TabItem Header="Preview">
                        <Border Background="{StaticResource Brush_Surface}" CornerRadius="0,4,4,4" BorderThickness="0" Margin="0,5,0,0">
                            <FlowDocumentScrollViewer x:Name="DetailPreview" 
                                                      Background="Transparent"
                                                      VerticalScrollBarVisibility="Auto" 
                                                      HorizontalScrollBarVisibility="Disabled"
                                                      Margin="5"/>
                        </Border>
                    </TabItem>

                    <TabItem Header="Source">
                        <TextBox x:Name="DetailContent"
                                 Background="{StaticResource Brush_Surface}" 
                                 Foreground="{StaticResource Brush_TextPrimary}" 
                                 BorderThickness="0"
                                 Padding="15" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto" 
                                 FontSize="14"
                                 FontFamily="Consolas"
                                 TextChanged="DetailContent_TextChanged"
                                 IsEnabled="False"
                                 Margin="0,5,0,0"/>
                    </TabItem>
                </TabControl>
                
                <!-- Status Bar -->
                <TextBlock x:Name="StatusText" Grid.Row="3" Margin="0,10,0,0" Foreground="{StaticResource Brush_TextSecondary}" FontSize="12"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
