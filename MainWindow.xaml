<Window x:Class="VisionGrabber.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mdxaml="clr-namespace:MdXaml;assembly=MdXaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="VisionGrabber" Height="700" Width="500" 
        Background="{StaticResource Brush_Background}"
        WindowStyle="None"
        ResizeMode="CanResize"
        Icon="icon.ico"
        BorderBrush="{StaticResource Brush_Accent}"
        BorderThickness="1">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="1" CornerRadius="0" CaptionHeight="32" UseAeroCaptionButtons="False" ResizeBorderThickness="4"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/> <!-- Title Bar -->
            <RowDefinition Height="Auto"/> <!-- Header Controls -->
            <RowDefinition Height="*"/>    <!-- Content -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="{StaticResource Brush_Surface}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                <Image Source="icon.ico" Width="16" Height="16" Margin="0,0,10,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock Text="VisionGrabber" VerticalAlignment="Center" Foreground="{StaticResource Brush_TextSecondary}" FontSize="12"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                <Button Style="{StaticResource TitleBarButtonStyle}" Click="Minimize_Click" ToolTip="Minimize">
                    <Button.Content>
                        M0,8 H10
                    </Button.Content>
                </Button>
                <Button Style="{StaticResource TitleBarButtonStyle}" Click="Maximize_Click" ToolTip="Maximize">
                    <Button.Content>
                        M0,1 H10 V9 H0 Z
                    </Button.Content>
                </Button>
                <Button Style="{StaticResource TitleBarCloseButtonStyle}" Click="Close_Click" ToolTip="Close">
                    <Button.Content>
                        M1,1 L9,9 M1,9 L9,1
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Header Controls -->
        <Border Grid.Row="1" Padding="20" Background="{StaticResource Brush_Background}">
            <StackPanel>
                <!-- Status & Combo Row -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Name="StatusText" 
                                   Text="Ready" 
                                   Foreground="{StaticResource Brush_Accent}" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="250"/>
                        <ProgressBar Name="ThinkingBar" Height="4" Width="100" Margin="0,4,0,0" HorizontalAlignment="Left"
                                     IsIndeterminate="True" Visibility="Hidden" Background="Transparent" BorderThickness="0" Foreground="{StaticResource Brush_Accent}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="AI Engine" FontSize="11" Foreground="{StaticResource Brush_TextSecondary}"/>
                                <ContentControl Style="{StaticResource Style_HelpIcon}" ToolTip="Select which AI model to use for processing. Local uses your PC, Cloud uses Gemini API."/>
                            </StackPanel>
                            <ComboBox x:Name="BackendCombo" Width="180" Height="32" 
                                      SelectionChanged="BackendCombo_SelectionChanged" SelectedIndex="1">
                                <ComboBoxItem Content="Local"/>
                                <ComboBoxItem Content="Cloud (Google Gemini)"/>
                                <ComboBoxItem Content="Networked llama-server"/>
                                <ComboBoxItem Content="Networked VisionGrabber Server"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- API Key Box (Conditional) -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Right">
                     <TextBlock Name="ApiKeyLabel" Text="API Key:" VerticalAlignment="Center" Foreground="{StaticResource Brush_TextSecondary}" Margin="0,0,10,0" Visibility="Collapsed"/>
                     <PasswordBox Name="ApiKeyBox" Width="140" Visibility="Collapsed" Background="{StaticResource Brush_Surface}" Foreground="{StaticResource Brush_TextPrimary}" BorderBrush="{StaticResource Brush_Border}" Padding="4"/>
                </StackPanel>

                <!-- Main Action Button -->
                <!-- Main Action Button -->
                <Button Content="CAPTURE (Alt+Shift+T)" Click="Capture_Click" Style="{StaticResource Style_ButtonPrimary}" Height="42" FontSize="14" Margin="0,5,0,0">
                </Button>
            </StackPanel>
        </Border>

        <!-- Main Content (Split) -->
        <Grid Grid.Row="2" Margin="10,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="RAW OUTPUT" Foreground="{StaticResource Brush_TextDisabled}" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
            
            <TextBox Name="OutputBox" 
                     Grid.Row="1"
                     TextChanged="OutputBox_TextChanged"
                     TextWrapping="Wrap" 
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     FontSize="13"
                     Background="{StaticResource Brush_Surface}"
                     BorderThickness="0"/>

            <GridSplitter Grid.Row="2" Height="1" 
                          HorizontalAlignment="Stretch" VerticalAlignment="Center"
                          Background="{StaticResource Brush_Border}" 
                          ResizeBehavior="PreviousAndNext"
                          ResizeDirection="Rows"
                          ShowsPreview="True"
                          Margin="0,5"/>

            <TextBlock Grid.Row="3" Text="PREVIEW" Foreground="{StaticResource Brush_TextDisabled}" FontSize="10" FontWeight="Bold" Margin="0,5,0,5"/>

            <Border Grid.Row="4" Background="{StaticResource Brush_Surface}" CornerRadius="4">
                <FlowDocumentScrollViewer Name="PreviewViewer" 
                                          Background="Transparent"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          Margin="5"/>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="3" Padding="10" Background="{StaticResource Brush_Background}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <Button Content="History" Click="History_Click" Margin="0,0,8,0" Style="{StaticResource Style_ButtonGhost}"/>
                    <Button Content="Settings" Click="Settings_Click" Style="{StaticResource Style_ButtonGhost}"/>
                </StackPanel>
                
                <Button Grid.Column="1" Content="Copy Text" Click="Copy_Click" Width="100"/>
            </Grid>
        </Border>
        
    </Grid>
    
    <!-- Add slight border glow or shadow to window if possible, but standard border is fine -->
</Window>